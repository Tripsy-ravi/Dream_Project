<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SetPasswordActivity">

        <androidx.cardview.widget.CardView
            android:layout_width="321dp"
            android:layout_height="314dp"
            android:layout_marginTop="78dp"
            android:layout_marginLeft="45dp"
            android:backgroundTint="#F5F6F7">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#F5F6F7"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set Password"
            android:textStyle="bold"
            android:textSize="24sp"
            android:textFontWeight="600"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="454dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="539dp"
            android:layout_marginLeft="22dp"
            android:src="@drawable/mask_group"/>

        <EditText
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="528dp"
            android:layout_marginLeft="55dp"
            android:ems="10"
            android:inputType="phone"
            android:textColorHint="@color/black"
            android:hint="Password" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="609dp"
            android:layout_marginLeft="22dp"
            android:src="@drawable/mask_group"/>

        <EditText
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="594dp"
            android:layout_marginLeft="55dp"
            android:ems="10"
            android:inputType="textPassword"
            android:textColorHint="@color/black"
            android:hint="Confirm Password" />


        <Button
            android:layout_width="361dp"
            android:layout_height="65dp"
            android:layout_marginTop="797dp"
            android:layout_marginLeft="22dp"
            android:backgroundTint="#FFC300"
            android:text="Continue"
            android:textAllCaps="false"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"
            android:textFontWeight="600"
            android:textSize="18sp"/>

    </RelativeLayout>
</ScrollView>